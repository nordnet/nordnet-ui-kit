{
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "react/forbid-prop-types": [2, { "forbid": ["any", "array"] }],
    "max-len": [2, 140],
    "react/require-default-props": 0
  }
}
